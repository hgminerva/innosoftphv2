@using Microsoft.AspNet.Identity
@using TaskManagementSystemV2.Models
@model RegisterViewModel

@if (Request.IsAuthenticated)
{
    @Html.AntiForgeryToken()
    <!-- Section -->
    <section>
        @{ Response.Redirect("~/Software/Index");}
    </section>
}
else
{
    <section>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create a new account</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                <div class="" style="text-align:center; margin: 0 auto; width: 280px;">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div class="" style="text-align:center; margin: 0 auto; width: 280px;">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                <div class="" style="text-align:center; margin: 0 auto; width: 280px;">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="">
                    <input type="submit" class="btn btn-primary" value="Register" />
                    @Html.ActionLink("Cancel", "Login", "Account", null, new { @class = "btn btn-danger btn-large" })
                </div>
            </div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </section>
}
